{
  "name": "Present",
  "description": "BCS attendance-taker",
  "version": "1.0",
  "manifest_version": 3,
  "background": {
    "service_worker": "./scripts/background.js"
  },
  "permissions": ["activeTab", "scripting", "debugger"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "128": "/images/present_128.png"
    }
  },
  "icons": {
    "128": "/images/present_128.png"
  }
}
